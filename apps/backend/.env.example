# ===========================================
# DATABASE (Supabase PostgreSQL)
# ===========================================
# Pooler connection (recommended for API)
DATABASE_URL=postgresql://postgres.[PROJECT-ID]:[YOUR-PASSWORD]@aws-1-us-east-1.pooler.supabase.com:6543/postgres

# Direct connection (use for migrations)
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-ID].supabase.co:5432/postgres

# ===========================================
# SUPABASE AUTH (REQUIRED)
# ===========================================
# Get these values from: Supabase Dashboard > Settings > API Keys

# Project URL
SUPABASE_URL=https://[PROJECT-ID].supabase.co

# Publishable key (Dashboard > Settings > API Keys > "Publishable key")
# Safe to use in frontend, also used in backend for auth
SUPABASE_PUBLISHABLE_KEY=sb_publishable_[PUBLISHABLE-KEY-HERE]

# Secret key (Dashboard > Settings > API Keys > Secret keys > "default")
# BACKEND ONLY - NEVER expose in frontend!
# Click the eye icon to reveal the full key
SUPABASE_SECRET_KEY=sb_secret_[YOUR-SECRET-KEY-HERE]

# Webhook secret (Dashboard > Database > Webhooks)
# Used to validate webhook requests from Supabase
# Generate with: openssl rand -base64 32
SUPABASE_WEBHOOK_SECRET=your-webhook-secret-here

# ===========================================
# REDIS (BullMQ Job Queue)
# ===========================================
# For local development (Docker): redis://localhost:6379
# For Railway: Use Railway Redis connection string
REDIS_URL=redis://localhost:6379

# ===========================================
# API
# ===========================================
API_PORT=3001
API_BASE_URL=http://localhost:3001

# ===========================================
# ENCRYPTION
# ===========================================
# AES-256-GCM encryption key for sensitive credentials
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-hex-key-here

# ===========================================
# SUPER ADMIN
# ===========================================
# Email of user to be automatically elevated to super-admin
# Leave empty if you don't want a super-admin configured
SUPER_ADMIN_EMAIL=xmaiconx@gmail.com

# ===========================================
# EMAIL (Resend)
# ===========================================
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@rugidodigital.com.br

# ===========================================
# FRONTEND
# ===========================================
FRONTEND_URL=http://localhost:3000

# ===========================================
# LOGGING
# ===========================================
# Levels: error | warn | info | debug
LOG_LEVEL=info

# ===========================================
# BOOTSTRAP MODE
# ===========================================
# Options: api | workers | hybrid
# - api: Only API endpoints (no workers)
# - workers: Only background workers (no API)
# - hybrid: Both API and workers (default for Railway)
NODE_MODE=hybrid

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable workspace management functionality
FEATURES_WORKSPACE_ENABLED=true
# Enable workspace switching
FEATURES_WORKSPACE_SWITCHING_ENABLED=true

# ===========================================
# STRIPE BILLING
# ===========================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_SUCCESS_URL=http://localhost:3000/settings/billing?success=true
STRIPE_CANCEL_URL=http://localhost:3000/settings/billing?canceled=true

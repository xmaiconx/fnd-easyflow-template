# Database
# Local PostgreSQL (development)
DATABASE_URL=postgresql://user:password@localhost:5432/agentics

# OU Supabase (recomendado - mais fácil para alunos)
# Pooler connection (recomendado para produção/API)
# DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?sslmode=require
# Direct connection (recomendado para migrations)
# DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres?sslmode=require

# Supabase Configs (opcional - se quiser usar features extras)
# SUPABASE_URL=https://[project-ref].supabase.co
# SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Redis (single instance for jobs + cache)
REDIS_JOBS_URL=redis://localhost:6379

# API
API_PORT=3001
API_BASE_URL=http://localhost:3001

# Auth
JWT_SECRET=your-secret-key-here

# Encryption (AES-256-GCM for credentials)
ENCRYPTION_KEY=your-32-byte-hex-key-here

# Super Admin
SUPER_ADMIN_EMAIL=admin@example.com

# Email
RESEND_API_KEY=re_xxx
RESEND_FROM_EMAIL=noreply@domain.com

# Frontend
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# Bootstrap Mode
NODE_MODE=

# Feature Flags
FEATURES_WORKSPACE_ENABLED=true
FEATURES_WORKSPACE_SWITCHING_ENABLED=true

# Stripe Billing
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_SUCCESS_URL=http://localhost:3000/settings/billing?success=true
STRIPE_CANCEL_URL=http://localhost:3000/settings/billing?canceled=true
